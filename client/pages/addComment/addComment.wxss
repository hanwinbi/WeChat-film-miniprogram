.commentDetail{
  margin: 150rpx 50rpx 0rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(177, 176, 176, 0.103);
  background: white;
  height: 900rpx;
}

.poster{
  position: absolute;
  left: 225rpx;
  top: 50rpx;
  height: 350rpx;
  width: 280rpx;
}

.filmname{
  padding-top: 280rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: 800
}


.comment{
  text-align: center;
  margin: 30rpx 50rpx 0rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  height: 500rpx;
  width: 550rpx;
  opacity: 0.8;
}

.tapbutton{
  padding-top: 35%;
  padding-left: 25%;
  display: flex;
  flex-direction: row;
}

.button{
  margin: 0rpx 30rpx 0rpx;
  width: 50%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  border-radius: 5rpx;
  background: white;
  border: 2rpx solid rgba(161, 160, 160, 0.171);
}

.button-icon{
  padding-left: 20rpx;
  padding-top: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

.button-text{
  font-size: 35rpx;
  line-height: 49rpx;
  padding-left: 8rpx;
  padding-top: 16rpx;
}

.bottom-button{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  background: rgb(46, 170, 46);
}

.finish-text{
  padding-top: 25rpx;
  text-align:center;
  align-items:center;
  justify-content: center;
  font-size: 35rpx;
  line-height: 49rpx;
  color: white
}